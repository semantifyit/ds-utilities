{
  "name": "ds-utilities",
  "version": "1.2.0",
  "description": "A helper library that provides functions to handle Domain Specifications.",
  "main": "src/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "buildAll": "npm run-script build && npm run-script buildMinified && npm run-script buildtypes",
    "build": "browserify src/index.js -s DsUtilities | derequire -cm --toplevel > dist/ds-utilities.js",
    "buildMinified": "browserify src/index.js -s DsUtilities -g [uglifyify] | derequire -cm --toplevel > dist/ds-utilities.min.js",
    "buildtypes": "npx -p typescript tsc src/**/*.js --declaration --allowJs --emitDeclarationOnly --outDir dist/types",
    "test": "jest",
    "badges": "jest-coverage-badges",
    "test:badges": "npm run-script test && npm run-script badges",
    "getJsDocMD": "jsdoc2md src/index.js src/versions/*.js src/versions/functions/*.js > API.md",
    "eslint-check": "eslint \"{**/*,*}.js\"",
    "eslint-repair": "eslint --fix \"{**/*,*}.js\"",
    "prettier-check": "prettier --check \"{**/*,*}.js\"",
    "prettier-repair": "prettier --write \"{**/*,*}.js\""
  },
  "keywords": [
    "domain",
    "specifications",
    "ds",
    "utilities"
  ],
  "author": "Omar J. A. Holzknecht",
  "license": "Apache-2.0",
  "dependencies": {
    "nanoid": "^3.1.25"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "derequire": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.1",
    "jest-coverage-badges": "^1.1.2",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "prettier": "^2.4.0",
    "uglifyify": "^5.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md",
    "HISTORY.md",
    "LICENSE",
    "package.json"
  ]
}
