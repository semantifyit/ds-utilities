{
  "name": "ds-utilities",
  "version": "2.0.0",
  "description": "A helper library that provides functions to handle Domain Specifications.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "buildAll": "npm run-script build && npm run-script buildMinified && npm run-script buildtypes",
    "build": "browserify src/index.js -s DsUtilities | derequire -cm --toplevel > dist/ds-utilities.js",
    "buildMinified": "browserify src/index.js -s DsUtilities -g [uglifyify] | derequire -cm --toplevel > dist/ds-utilities.min.js",
    "buildtypes": "npx -p typescript tsc src/**/*.js --declaration --allowJs --emitDeclarationOnly --outDir dist/types",
    "test": "jest",
    "badges": "jest-coverage-badges",
    "test:badges": "npm run-script test && npm run-script badges",
    "getJsDocMD": "jsdoc2md src/index.js src/versions/*.js src/versions/functions/*.js src/verification/**/*.js > API.md",
    "eslint-check": "eslint src/*.ts tests/*.ts",
    "eslint-repair": "eslint --fix src/*.ts tests/*.ts",
    "eslint-check-lib": "eslint lib/*.js --no-ignore",
    "prettier-check": "prettier --check src/*.ts tests/*.ts",
    "prettier-repair": "prettier --write src/*.ts tests/*.ts",
    "buildTs": "tsc -b src",
    "watchTs": "tsc -b src --watch"
  },
  "keywords": [
    "domain",
    "specifications",
    "ds",
    "utilities"
  ],
  "author": "Omar J. A. Holzknecht",
  "homepage": "https://github.com/semantifyit/ds-utilities",
  "repository": {
    "type": "git",
    "url": "https://github.com/semantifyit/ds-utilities"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "nanoid": "^3.1.25"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "browserify": "^17.0.0",
    "derequire": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.1",
    "jest-coverage-badges": "^1.1.2",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "prettier": "^2.4.0",
    "schema-org-adapter": "^5.0.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "uglifyify": "^5.0.2"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "tsconfig": "tests/tsconfig.json"
      }
    }
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md",
    "HISTORY.md",
    "LICENSE",
    "package.json"
  ]
}
